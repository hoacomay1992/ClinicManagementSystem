<div class="mt-4">
    <h3>Thêm Mới Bác Sỹ</h3>
    <form method="POST" action="/courses/store">
        <div class="mb-3">
            <label for="name" class="form-label">Họ Và Tên</label>
            <input type="text" class="form-control" id="name" name="name" />
        </div>
        <div class="mb-3">
            <label for="id" class="form-label">Mã Bác Sỹ</label>
            <input type="text" class="form-control" id="id" name="id" />
        </div>
        <div class="mb-3">
            <label for="dob" class="form-label">Ngày Sinh</label>
            <input type="date" class="form-control" id="dob" name="dob" />
        </div>
        <div class="mb-3">
            <label for="cmt" class="form-label">Số CCCD</label>
            <input type="text" class="form-control" id="cmt" name="cmt" />
        </div>
        <div class="mb-3">
            <label for="phone" class="form-label">Số Điện Thoại</label>
            <input type="number" class="form-control" id="phone" name="phone" />
        </div>
        <div class="mb-3">
            <label for="address" class="form-label">Địa Chỉ</label>
            <input type="text" class="form-control" id="address" name="address" />
        </div>
        <div class="mb-3">
            <label for="level" class="form-label">Thứ Hạng</label>
            <input type="text" class="form-control" id="level" name="level" />
        </div>
        <div class="mb-3">
            <label for="experience" class="form-label">Kinh Nghiệm</label>
            <input type="number" class="form-control" id="experience" name="experience" />
        </div>
        <div class="mb-3">
            <label for="education" class="form-label">Trình Độ</label>
            <input type="text" class="form-control" id="education" name="education" />
        </div>
        <div class="mb-3">
            <label for="specialization" class="form-label">Chuyên Nghành</label>
            <input type="text" class="form-control" id="specialization" name="specialization" />
        </div>
        <button type="submit" class="btn btn-primary">Thêm Mới</button>
    </form>
</div>